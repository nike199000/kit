<section class="section colors grid">
  <header class="row">
    <h5 class="header h5 twelve column">Colors</h5>
  </header>

  {% for color in colors %}
    <header class="row">
      <h6 class="title h6 is-regular twelve column {{ 'is-uppercase' if color.name == 'ui' else 'is-capitalize' }}">{{ color.name }}</h6>
    </header>

    <ul class="swatches row">
      {% for swatch in color.swatches %}
        <li class="swatch {{ color.column }} column">
          <div class="background {{ color.name + '-' + loop.index }}-background-color row with-no-gutter is-aligned-right">
            {% if color.name != 'ui' %}
              <div class="shade-10 two column with-no-gutter"></div>
              <div class="shade-30 two column with-no-gutter"></div>
              <div class="shade-50 two column with-no-gutter"></div>
            {% endif %}
          </div>

          <ul class="details small-text ui-3-color">
            <li class="detail is-capitalize row with-no-gutter with-space-between">
              <strong class="caption is-semibold core-3-color {{ 'is-uppercase' if color.name == 'ui' }}">{{ color.name + ' ' + loop.index }}</strong>
              <span class="swatch-name">{{ swatch.name }}</span>
            </li>
            <li class="detail row with-no-gutter with-space-between">
              <span class="is-uppercase">hex</span>
              <span>{{ swatch.hex }}</span>
            </li>
            <li class="detail row with-no-gutter with-space-between">
              <span class="is-uppercase">rgb</span>
              <span>{{ swatch.rgb }}</span>
            </li>
          </ul>
        </li>
      {% endfor %}
    </ul>
  {% endfor %}
</section>
